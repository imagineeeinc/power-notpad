{
  "name": "power-notepad",
  "version": "1.0.3",
  "description": "a more powerful notepad than the default notepad",
  "main": "application.js",
  "scripts": {
    "electron": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist-win": "electron-builder --win",
    "dist-mac": "electron-builder --mac",
    "dist-linux": "electron-builder --linux"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/imagineeeinc/power-notepad.git"
  },
  "keywords": [
    "notepad"
  ],
  "author": "imagineee <imagineeeinc@users.noreply.github.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/imagineeeinc/power-notepad/issues"
  },
  "homepage": "https://imagineeeinc.github.io/power-notepad/",
  "dependencies": {
    "electron-dl": "^3.0.2"
  },
  "devDependencies": {
    "electron": "^13.6.6",
    "electron-reload": "^1.5.0",
    "electron-builder": "^22.9.1"
  },
  "build": {
    "appId": "power-notepad",
    "productName": "power-notepad",
    "copyright": "Copyright Â© 2020 Imagineee",
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "default",
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "portable",
        "zip",
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "apk",
        "zip",
        "deb",
        "rpm"
      ]
    }
  }
}
